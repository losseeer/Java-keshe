<!--            #{id}-->
<!--        </foreach>-->
<!--    </delete>-->
<!--    条件查询-->
    <select id="list" resultType="com.sp_czk.pojo.Visitors">
        select * from visitors
        <where>
            <if test="status != null">
                status = #{status}
            </if>
            <if test="name != null">
                and name like concat('%',#{name},'%')
            </if>
            <if test="begin != null and end != null">
                and vdate between #{begin} and #{end}
            </if>
        </where>
        order by vdate, id desc
    </select>
</mapper>