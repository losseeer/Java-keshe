<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sp_czk.mapper.VisMapper">
<!--    更新员工数据-->
    <update id="update">
        update visitors
        <set>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="id != null">
                id = #{id},
            </if>
            <if test="approver != null">
                approver = #{approver},
            </if>
        </set>
        where uid=#{uid}
    </update>
