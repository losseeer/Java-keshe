<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sp_czk.mapper.VisedMapper">
<!--    更新员工数据-->
    <update id="update">
        update visitors
        <set>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="id != null">
                id = #{id},
            </if>
            <if test="approver != null">
                approver = #{approver}
            </if>
        </set>
        where uid=#{uid}
    </update>
<!--    批量删除员工-->
    <delete id="delete">
        delete
        from visitors
        where id in
        <foreach collection="ids" item="id" separator=","  open="(" close=")">
            #{id}
        </foreach>
    </delete>
<!--    条件查询-->
    <select id="list" resultType="com.sp_czk.pojo.Visitors">
        select * from visitors
        <where>
            <if test="name != null">
                and name like concat('%',#{name},'%')
            </if>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="status == null">
                and status != 1
            </if>
            <if test="approver != null">
                and approver like concat('%',#{approver},'%')
            </if>
            <if test="begin != null and end != null">
                and vdate between #{begin} and #{end}
            </if>
        </where>
        order by vdate, id desc
    </select>
</mapper>