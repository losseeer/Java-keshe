<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sp_czk.mapper.EntryRecordsMapper">
<!--    更新员工数据-->
    <update id="update">
        update entry_records
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="gender != null">
                gender = #{gender},
            </if>
            <if test="image != null and image != ''">
                image = #{image},
            </if>
            <if test="job != null">
                job = #{job},
            </if>
            <if test="entrydate != null">
                entrydate = #{entrydate},
            </if>
            <if test="deptId != null">
                dept_id = #{deptId},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime}
            </if>
        </set>
        where id=#{id}
    </update>
<!--    批量删除员工-->
    <delete id="delete">
        delete
        from entry_records
        where id in
        <foreach collection="ids" item="id" separator=","  open="(" close=")">
            #{id}
        </foreach>
    </delete>
<!--    条件查询-->
    <select id="list" resultType="com.sp_czk.pojo.EntryRecords">
        select * from entry_records
        <where>
            <if test="name != null">
                and name like concat('%',#{name},'%')
            </if>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="identity != null">
                and identity = #{identity}
            </if>
            <if test="begin != null and end != null">
                and etime between #{begin} and #{end}
            </if>
        </where>
        order by etime desc
    </select>
</mapper>